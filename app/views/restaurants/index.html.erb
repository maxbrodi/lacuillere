<h1 class="text-center">The Restaurants</h1>
<br>

<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <!-- Slider Wrapper -->
      <div id="slider-wrapper">
        <div class="inner-wrapper">
          <input checked type="radio" name="slide" class="control" id="Slide1"/>
            <label for="Slide1" id="s1"></label>
          <input type="radio" name="slide" class="control" id="Slide2"/>
            <label for="Slide2" id="s2"></label>
          <input type="radio" name="slide" class="control" id="Slide3"/>
            <label for="Slide3" id="s3"></label>
          <input type="radio" name="slide" class="control" id="Slide4"/>
            <label for="Slide4" id="s4"></label>
          <div class="overflow-wrapper">
            <a class="slide" href=""><img src="http://i.imgur.com/hKju1EC.jpg"/></a>
            <a class="slide" href=""><img src="http://i.imgur.com/hKju1EC.jpg"/></a>
            <a class="slide" href=""><img src="http://i.imgur.com/hKju1EC.jpg"/></a>
            <a class="slide" href=""><img src="http://i.imgur.com/hKju1EC.jpg"/></a>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-6">
      <ul>
        <% @restaurants.each do |resto| %>
          <li>
            <%= link_to resto.name + " [" + resto.category + "]", restaurant_path(resto) %>
          </li>
        <% end %>
        <br>
        <%= link_to "Add new restaurant", new_restaurant_path, class: "btn btn-warning" %>
      </ul>
    </div>
  </div>
</div>



