<h1>New review for <%= @restaurant.name %></h1>
<br>
<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <%= simple_form_for([@restaurant, @review]) do |r| %>
        <%= r.error_notification %>

        <%= r.input :content %>
        <%= r.input :rating %>

        <%= r.button :submit, class: 'btn btn-warning'%>
      <% end %>
    </div>
  </div>
</div>

